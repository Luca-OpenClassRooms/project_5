{% extends "layout.html.twig" %}

{% block content %}
<article class="blog-post px-3 py-5 p-md-5">
    <div class="container single-col-max-width">
        <header class="blog-post-header">
            <h2 class="title mb-2">{{ post.title }}</h2>
            <div class="meta mb-3">
                <span class="date">Dernière mise à jour : 27/01/2023</span>
                <span class="comment"><a class="text-link" href="#">4 commentaires</a></span>
            </div>
        </header>
        
        <div class="blog-post-body">
            <figure class="blog-banner">
                <img class="img-fluid" src="/assets/images/blog/blog-post-banner.jpg" alt="image">
            </figure>

            <p>
                {{ post.short_content | raw }}
            </p>
            
            <div>
                {{ post.content | raw }}
            </div>
        </div>
        
        {# <nav class="blog-nav nav nav-justified my-5 gap-3">
            <a class="nav-link-prev nav-item nav-link rounded-left" href="#">Précédent<i class="arrow-prev fas fa-long-arrow-alt-left"></i></a>
            <a class="nav-link-next nav-item nav-link rounded-right" href="#">Suivant<i class="arrow-next fas fa-long-arrow-alt-right"></i></a>
        </nav> #}
        
        <div class="blog-comments-section">
         
        </div>
    </div>
</article>
{% endblock %}