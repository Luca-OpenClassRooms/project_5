{% extends "layout.html.twig" %}

{% set cta_title = "Connexion" %}
{% set cta_description = "Connectez-vous pour acc√©der pleinement du site." %}

{% block content %}
<section class="blog-list px-3 py-5 p-md-5">
    <div class="container single-col-max-width">
        <form action="" method="POST" class="d-flex flex-column gap-4">
            <div class="form-group">
                <label for="email" class="mb-2">E-mail</label>
                <input class="form-control" type="email" id="email" name="email" placeholder="Ex: john.doe@gmail.com" /> 
            </div>
            <div class="form-group">
                <label for="password" class="mb-2">Mot de passe</label>
                <input class="form-control" type="password" id="password" name="password" placeholder="*****" /> 
            </div>

            <p class="m-0">
                Vous n'avez pas de compte ?
                <a href="{{ route('auth.register') }}">S'inscire</a>
            </p>
            
            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    </div>
</section>
{% endblock %}